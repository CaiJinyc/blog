<!DOCTYPE html>
<html lang="en">
<head>
  <% include _include/head.ejs %>
</head>
<body>
  <%- partial('_include/header.ejs', {}, { cache: true }) %>
  <main class="main-tags">
    <div class="all-tags">
      <h1 class="title">
        ALL TAGS
      </h1>
      <%- partial('_include/all_tags.ejs', {}, { cache: true }) %>
    </div>
    <div class="posts-list">
      <h1 class="title">
        ALL POSTS
      </h1>
      <% if (site.posts.length > 0) { %>
        <div class="archive-posts">
          <% site.posts.sort('date', -1).each(function(post) { %>
            <div class="archive-post-item">
              <div class="post-title">
                <a href="<%= config.root + post.path %>">
                  <%= post.title %>
                  <% if (post.date) { %>
                    <time datetime="<%= post.date.toJSON() %>">
                        <%= date(post.date) %>
                    </time>
                  <% } %>
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </main>
  <%- partial('_include/footer.ejs', {}, { cache: true }) %>
</body>
</html>