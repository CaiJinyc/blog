<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('_include/head.ejs', { title: 'TAG' }) %>
</head>
<body>
  <%- include('_include/header.ejs', { title: 'TAG' }) -%>
  <main class="main-tags">
    <div class="all-tags">
      <h1 class="title">
        ALL TAGS
      </h1>
      <%- partial('_include/all_tags.ejs', {}, { cache: true }) %>
    </div>
    <div class="current-tag">
      <h1 class="title">
        CURRENT TAG
      </h1>
      <h1 class="tag-name">
          <%= page.tag %>
      </h1>
    </div>
    <div class="posts-list">
      <h1 class="title">
        CURRENT TAG'S POSTS
      </h1>
      <% include _include/tag_posts.ejs %>
    </div>
  </main>
  <%- partial('_include/footer.ejs', {}, { cache: true }) %>
</body>
</html>