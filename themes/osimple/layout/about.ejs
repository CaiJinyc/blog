<!DOCTYPE html>
<html lang="en">
<head>
  <% include _include/head.ejs %>
  <%- css('css/arduino-light.css') %>
</head>
<body>
  <header>
      <div class="home-title-content">
        <h1 class="title">
            ABOUT ME
        </h1>
        <span class="subtitle">
          <%= config.subtitle %>
        </span>
        <p class="desc">
            <%= config.description %>
          </p>
      </div>
      <div class="menu-inner">
          <% Object.keys(theme.menu).forEach(function(key) { %>
            <a href="<%= url_for(theme.menu[key]) %>"><%= key %></a>
          <% }); %>
      </div>
    </header>
  <main>
    <div class="top-inner">
      <h1 class="page-title">
        <%= page.title %>
      </h1>
      <% if (page.tags && page.tags.length > 0) { %>
        <ul class="tag-list">
          <% page.tags.forEach((v) => { %>
            <li class="tag-list-item">
              <a href="<%= config.root + v.path %>"><%= v.name %></a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
    <article class="post">
        <%- page.content %>
    </article>
    <% include _include/extra_post.ejs %>
    <% include _include/comment_tmp.ejs %>
    <div class="post-all-tags">
      <h1 class="title">ALL TAGS</h1>
      <%- partial('_include/all_tags.ejs', {}, { cache: true }) %>
    </div>
  </main>
  <%- partial('_include/footer.ejs', {}, { cache: true }) %>
  <% include _include/comment.ejs %>
  <%- js('js/highlight.js') %>
</body>
</html>


