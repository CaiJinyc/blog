<!DOCTYPE html>
<html lang="en">
<head>
  <% include _include/head.ejs %>
  <%- css('css/arduino-light.css') %>
</head>
<body>
    <div class="post-menu-inner">
      <a class="left" href="<%= url_for(theme.menu.HOME) %>"><%= config.title %></a>
      <div class="right">
        <% Object.keys(theme.menu).forEach(function(key) { %>
          <a href="<%= url_for(theme.menu[key]) %>"><%= key %></a>
        <% }); %>
      </div>
    </div>
  <main>
    <div class="top-inner">
      <h1 class="page-title">
        <%= page.title %>
      </h1>
      <% if (page.tags && page.tags.length > 0) { %>
        <ul class="tag-list">
          <% page.tags.forEach((v) => { %>
            <li class="tag-list-item">
              <a href="<%= config.root + v.path %>"><%= v.name %></a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
    <article class="post resume">
        <%- page.content %>
    </article>
  </main>
  <%- js('js/highlight.js') %>
</body>
</html>


