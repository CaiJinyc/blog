
<%
var pageTitle = page.title || config.subtitle || '';
if (is_archive()) pageTitle = 'Archives';
if (is_tag()) pageTitle = 'Tag: ' + page.tag;
if (is_category()) pageTitle = 'Category: ' + page.category;
if (is_month()) pageTitle += ': ' + page.month + '/' + page.year;
if (is_year()) pageTitle += ': ' + page.year;
pageTitle += config.title;
%>

<!DOCTYPE html>
<html lang="<%=config.language%>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0, user-scalable=no">

  <title><%= pageTitle %></title>
  <link href='http://fonts.font.im/css?family=Open+Sans:400,400italic,700,700italic,800,800italic|Source+Sans+Pro:400,700,700italic,400italic' rel='stylesheet' type='text/css'>
  <%- css('css/bozh.css') %>
</head>
<body>

<div id="menu-outer">
  <div id="menu-name">
      <%- link_to('/', 'CJ SPACE') %>
  </div>
  <div id="menu-inner">
    <% Object.keys(theme.menu).forEach(function(key) { %>
      <a href="<%=url_for(theme.menu[key])%>"><%=key%></a>
    <% }); %>
  </div>
</div>

<div id="content-outer">
  <div id="content-inner">
    <%- body %>
  </div>
</div>

<div id="bottom-outer">
  <div id="bottom-inner">
    <p class="copyright">Copyright © CaiJinyc 2018</p> 
    <p class="hexo">由 <a href="http://hexo.io">Hexo </a>强力驱动</p>
  </div>
</div>

<%- js('js/bozh.js') %>


</body>
</html>
